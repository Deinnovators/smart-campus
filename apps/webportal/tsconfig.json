{
  "extends": "tsconfig/nextjs.json",
  "compilerOptions": {
    "baseUrl": ".",
    "paths": {
      "@webportal/*": ["./src/*"]
    },
    "isolatedModules": true
  },
  "include": [
    "next-env.d.ts",
    "**/*.ts",
    "**/*.tsx",
    "src/pages/_app.jsx",
    "src/pages/department/[id]/course/[courseId]/index.jsx"
  ],
  "exclude": ["node_modules"]
}
